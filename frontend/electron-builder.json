{
  "appId": "com.theonemind.id",
  "productName": "TheOneMindUtility",
  "files": ["dist/**/*", "electron/**/*"],
  "extraResources": [
    {
      "from": "../backend/dist",
      "to": "./",
      "filter": ["!**/.*"]
    }
  ],
  "directories": {
    "output": "release"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "http://localhost:3000"
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "src/assets/logo.png"
  },
  "mac": {
    "target": "dmg",
    "icon": "src/assets/logo.icns"
  }
}
