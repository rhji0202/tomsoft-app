{
  "appId": "com.theonemind.id",
  "productName": "TheOneMindUtility",
  "files": ["dist/**/*", "electron/**/*"],
  "extraResources": [
    {
      "from": "../backend/dist/fastapi_server.exe",
      "to": "fastapi_server.exe",
      "filter": ["!**/.*"]
    },
    {
      "from": "../backend/dist/fastapi_server",
      "to": "fastapi_server",
      "filter": ["!**/.*"]
    }
  ],
  "directories": {
    "output": "release"
  },
  "win": {
    "target": "nsis"
  },
  "mac": {
    "target": "dmg",
    "extraFiles": [
      {
        "from": "../backend/dist/fastapi_server",
        "to": "Contents/MacOS/fastapi_server"
      }
    ]
  }
}
